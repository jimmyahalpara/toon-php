{
    "name": "jimmyahalpara/toon-php",
    "description": "A compact, human-readable serialization format designed for passing structured data to Large Language Models with significantly reduced token usage",
    "type": "library",
    "license": "MIT",
    "keywords": ["toon", "serialization", "llm", "data-format", "token-efficient"],
    "authors": [
        {
            "name": "Jimmy Ahalpara",
            "email": "jimmy@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "JimmyAhalpara\\ToonFormat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JimmyAhalpara\\ToonFormat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
